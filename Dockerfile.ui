# Development Dockerfile for React Vite UI
FROM node:18-alpine

WORKDIR /app

# Copy only the UI folder from src/ui
COPY src/ui/ .

# Install dependencies
RUN npm install

# Expose Vite's default port
EXPOSE 5173

# Start development server with host binding
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
